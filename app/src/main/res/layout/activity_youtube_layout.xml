<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:paddingBottom="5dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80e9e9e9">

        <ImageView
            android:id="@+id/youtube_thumbnail_image_view"
            android:layout_width="116dp"
            android:layout_height="93dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/header_image"
            android:paddingBottom="10dp"
            android:src="@drawable/youtube_placeholder"
             />

        <TextView
            android:id="@+id/youtube_movie_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:lines="2"
            android:ellipsize="end"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/youtube_thumbnail_image_view"
            tools:text="Pacific Rim Uprising - Official Trailer (HD)" />

    </RelativeLayout>
</android.support.v7.widget.CardView>